<div id="comment-<%= comment.id %>">
<div class="comment mb-4 p-2 border border-gray-200 rounded flex items-center justify-between">
    <div class="flex items-center">
        <% if comment.user.avatar_url.present? %>
            <%= image_tag comment.user.avatar_url, alt: comment.user.name, class: 'w-8 h-8 rounded-full mr-2' %>
        <% else %>
            <%= image_tag 'avatar.png', alt: comment.user.name, class: 'w-8 h-8 rounded-full mr-2' %>
        <% end %>
        <div class="flex flex-col">
            <strong class="text-sky-800 text-left"><%= comment.user.name %></strong>
            <p class="text-sky-800"><%= comment.body %></p>
        </div>
    </div>
    <% if comment.user == current_user %>
        <%= link_to '削除', place_review_comment_path(comment.review.place, comment.review, comment), data: { turbo_method: :delete, turbo_confirm: '本当に削除しますか？' }, class: "text-red-500 ml-4" %>
    <% end %>
</div>
