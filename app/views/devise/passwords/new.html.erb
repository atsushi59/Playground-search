
<p class="text-center pb-6 text-xl md:text-3xl lg:text-3xl xl:text-3xl font-bold text-lime-500 mt-12 mb-6"><%= t('devise.confirmations.new.forgot_your_password') %></p>

<div class="bg-white p-4 rounded shadow-lg mx-auto relative max-w-xs sm:max-w-sm md:max-w-md lg:max-w-lg xl:max-w-xl h-auto overflow-auto">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="text-center p-4 text-base">
      <div class="mb-4">
        <%= f.label :email, class: "block text-lg font-medium" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full max-w-xs border-2 border-blue-300 h-10" %>
      </div>

      <div class="text-center mt-4">
        <%= f.submit t('devise.passwords.submit'), class: "px-24 py-2 bg-blue-500 text-white rounded hover:bg-blue-700 focus:outline-none focus:ring mt-6" %>
      </div>
    </div>
  <% end %>

  <div class="mt-8 text-center">
    <%= link_to 'ログインページはこちら', new_user_session_path, class: "hover:bg-blue-100 focus:ring-4 focus:ring-gray-300 font-medium rounded-xl text-lg p-2 hover:p-4" %>
  </div>

  <div class="mt-8 text-center">
    <%= link_to 'アカウント登録ページはこちら', new_user_registration_path, class: "hover:bg-blue-100 focus:ring-4 focus:ring-gray-300 font-medium rounded-xl text-lg p-2 hover:p-4" %>
  </div>
</div>
<br>
