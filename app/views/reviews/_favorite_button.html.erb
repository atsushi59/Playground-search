<div id="favorite-button-<%= review.id %>">
    <% if ReviewFavorite.exists?(user_id: current_user.id, review_id: review.id) %>
        <%= button_to place_review_review_favorite_path(review.place, review), method: :delete, class: 'favorite-button flex items-center' do %>
        <p class="ml-4">お気に入り：</p>
        <i class="fa-solid fa-star text-2xl text-yellow-500 mr-4"></i>
        <% end %>
    <% else %>
        <%= button_to place_review_review_favorite_path(review.place, review), method: :post, class: 'favorite-button flex items-center' do %>
        <p class="ml-4">お気に入り：</p>
        <i class="fa-regular fa-star text-2xl text-gray-300 mr-4"></i>
        <% end %>
    <% end %>
</div>
