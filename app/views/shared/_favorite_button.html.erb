<%= turbo_frame_tag dom_id(place, :favorite_button) do %>
  <% favorite = current_user.places_favorites.find_by(place: place) %>
  <% if favorite %>
    <%= link_to place_place_favorite_path(place, favorite), method: :delete, data: { turbo_method: :delete }, class: "text-yellow-500" do %>
      <%= image_tag('favorite.png', alt: 'Unfavorite', class: 'h-6 w-6 sm:h-8 sm:w-8 mt-2 mb-2') %>
    <% end %>
  <% else %>
    <%= link_to place_place_favorites_path(place_id: place.id), method: :post, data: { turbo_method: :post }, class: "text-gray-500" do %>
      <%= image_tag('un_favorite.png', alt: 'Favorite', class: 'h-6 w-6 sm:h-8 sm:w-8 mt-2 mb-2') %>
    <% end %>
  <% end %>
<% end %>
