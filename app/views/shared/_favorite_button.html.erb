<div id="favorite-button-<%= place.id %>">
    <% if PlacesFavorite.exists?(user_id: current_user.id, place_id: place.id) %>
        <%= button_to place_place_favorite_path(place, PlacesFavorite.find_by(user_id: current_user.id, place_id: place.id)), method: :delete, class: 'favorite-button flex items-center' do %>
            <p class="ml-4 text-sky-800">お気に入り：</p>
            <i class="fa-solid fa-star text-2xl text-yellow-500 mr-4"></i>
        <% end %>
    <% else %>
        <%= button_to place_place_favorites_path(place_id: place.id), method: :post, class: 'favorite-button flex items-center' do %>
            <p class="ml-4 text-sky-800">お気に入り：</p>
            <i class="fa-regular fa-star text-2xl text-gray-300 mr-4"></i>
        <% end %>
    <% end %>
</div>
